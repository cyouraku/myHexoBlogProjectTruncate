	<jaxrs:server id="weatherRest" address="/rest/weatherService">
		<jaxrs:serviceBeans>
			<bean class="cn.zifangsky.webservice.impl.WeatherWeatherServiceImpl" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<bean class="org.codehaus.jackson.jaxrs.JacksonJsonProvider" />
		</jaxrs:providers>
		<jaxrs:extensionMappings>
			<entry key="json" value="application/json" />
			<entry key="xml" value="application/xml" />
		</jaxrs:extensionMappings>
	</jaxrs:server>

	<jaxrs:server id="userRest" address="/rest/userService">
		<jaxrs:serviceBeans>
			<bean class="cn.zifangsky.webservice.impl.UserServiceImpl" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<bean class="org.codehaus.jackson.jaxrs.JacksonJsonProvider" />
		</jaxrs:providers>
		<jaxrs:extensionMappings>
			<entry key="json" value="application/json" />
			<entry key="xml" value="application/xml" />
		</jaxrs:extensionMappings>
	</jaxrs:server>

	<jaxrs:server id="videoRest" address="/rest/videoService">
		<jaxrs:serviceBeans>
			<bean class="cn.zifangsky.webservice.impl.VideoServiceImpl" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<bean class="org.codehaus.jackson.jaxrs.JacksonJsonProvider" />
		</jaxrs:providers>
		<jaxrs:extensionMappings>
			<entry key="json" value="application/json" />
			<entry key="xml" value="application/xml" />
		</jaxrs:extensionMappings>
	</jaxrs:server>

	<jaxrs:server id="animalRest" address="/rest/animalService">
		<jaxrs:serviceBeans>
			<bean class="cn.zifangsky.webservice.impl.AnimalServiceImpl" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<bean class="org.codehaus.jackson.jaxrs.JacksonJsonProvider" />
			<!-- add cors-filter ref-->
			<ref bean="cors-filter" />
		</jaxrs:providers>
		<jaxrs:extensionMappings>
			<entry key="json" value="application/json" />
			<entry key="xml" value="application/xml" />
		</jaxrs:extensionMappings>
	</jaxrs:server>

	<!-- add cors-filter bean -->
    <bean id="cors-filter" class="org.apache.cxf.rs.security.cors.CrossOriginResourceSharingFilter"/>

</beans>
